/* Soma Code #7a * * Just a Soma, with stimulator and NMDA synapse. *  *  1999 *//* The following command loads the standard run library functions into * the simulator.  These library functions are used to initialize the * simulator, begin and end simulations, and plot variables during a * simulation. */// load_proc("nrnmainmenu")xopen("$(NEURONHOME)/lib/hoc/noload.hoc")nrnmainmenu()tstop = 200			/* Set the time run the simulation */proc model_globals() {/* membrane defaults */celsius		= 15v_init		= -65		/* initial voltage; v at rest */g_passive	= .0003		/* the standard pas conductance */erev_passive	= -70		/* the pas reversal potential */gnaHH		= .12gkHH		= .036glHH		= .0003}model_globals()create soma	/* Create all of the cell's sections */access soma nseg = 1			/* # of compartments */diam = 5			/* Set the diameter of the soma (in um) */L = 20				/* Set the length of the soma (in um) */Ra = 20insert hh			insert cadyn		/* Insert calcium buffering and pump in the dendrite. */	depth_cadyn = 0.6  /* Set the depth of the calcium buffering to fill the dendrite (in um) */	kt_cadyn = 0.0003  /* Set the calcium buffering rate to eliminate NMDA Ca leak (in um) */
objectvar synAlpha, synNMDA		/* Declare the object variables for the synapses *//* We add the synapse to the soma. */soma {	synAlpha = new AlphaSynapse(0.5) 	synAlpha.tau = 1		synAlpha.onset = 20		synAlpha.gmax = 0			synAlpha.e = 15		

	synNMDA = new NmdaCaSyn(0.8) 	synNMDA.onset		= 20	//	(ms)		 Onset delay	synNMDA.gmax		= 0.001	//	(umoh)	Maximum NMDA current    }  /* Declare the object variable for the current pulse stimulus*/ 	objectvar stim			soma {	stim = new IClamp(0)		stim.del = 0				stim.dur = 1				stim.amp = 0		}  xopen("01_somaNMDA.ses")	/* Open the session file  */